<%- include('../includes/head', { pageTitle: 'SignUp' }) %>

<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include('../includes/header') %>
    <main>
        <h1>Create a new Account</h1> 
        <div class="card">
            <form action="/signup" method="POST">
                <div class="flex-container">
                    <div class="half-width">
                        <p>
                            <label for="email">E-mail</label>
                            <input type="email" id="email" name="email" required class="mui-input">
                        </p>
                    </div>
                    <div class="half-width">
                        <p>
                            <label for="confirm-email">Confirm E-mail</label>
                            <input type="email" id="confirm-email" name="confirm-email" required class="mui-input">
                        </p>
                    </div>
                </div>
                <p>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required minlength="8" class="mui-input">
                </p>
                <hr class="light-blue-separator">
                <p>
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" name="fullname" required class="mui-input">
                </p>
                <p>
                    <label for="street">Street</label>
                    <input type="text" id="street" name="street" required class="mui-input">
                </p>
                <div class="flex-container">
                    <div class="half-width">
                        <label for="postal">Postal Code</label>
                        <input type="text" id="postal" name="postal" required minlength="5" maxlength="6" class="mui-input">
                    </div>
                    <div class="half-width">
                        <label for="city">City</label>
                        <input type="text" id="city" name="city" required class="mui-input">
                    </div>
                </div>
                <div class="btn-container">
                    <button class="btn">
                        Create Account
                    </button>
                </div>
                <ul class="forgot-password">
                    <li><a href="/password-reset">Forgot Password?</a></li>
                </ul>
            </form>
        </div>
        <p id="switch-form">
            <a href="/login">Already have an account? Login</a>
        </p>
    </main>
    <%- include('../includes/footer') %>
</body>
</html>
